.card .card-details-container {
    position: relative;
    padding-top: 10px;
}

.card .card-img-container {
    width: 100%;
    display: block;
    position: relative;
}

.card .card-container {
    width: 100%;
}

.card .card-title {
    font-size: 17px;
    font-weight: bold;
}

.card .card-description {
    font-size: 17px;
    color: rgb(100, 100, 100);
}

.card .card-time {
    font-size: 13px;
    height: 17px;
    color: rgb(140, 140, 140);
}

.card .card-endlist {
    position: absolute;
    bottom: 0px;
    right : 5px;
    width: 55px;
    height: 17px;
    line-height: 16px;
    border-radius: 5px 5px 5px 5px;
    color: rgba(16, 16, 16, 1);
    font-size: 11px;
    text-align: center;
    border: 1px solid rgba(187, 187, 187, 1);
}