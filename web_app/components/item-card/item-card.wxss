/* Card */
.card {
    display: block;
    overflow: hidden;
    margin-bottom: 30rpx;
    margin-left: 10px;
    margin-right: 10px;
    background-color: clear;
}

.card image.card-img {
    display: block;
    max-width: 100%;
    height: 180px;
    border-radius: 12px;
}

